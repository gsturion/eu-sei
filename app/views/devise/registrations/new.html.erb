<div  class="container pt-5 mb-3">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 whitebox">
      <div class="mb-5">
       <img class="logo-login " src="https://uploaddeimagens.com.br/images/002/995/048/original/eusei_Marca-Cor.png?1607461691">
       </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: 'Seu e-mail',
                      required: true,
                      autofocus: true,
                      wrapper_html: { class: 'formtext' },
                      input_html: { autocomplete: "email" }%>
          <%= f.input :classroom_id,
                      label: 'Sala de aula',
                      collection: Classroom.all.map{ |c| [ "#{c.year}-#{c.name}", c.id ] } %>
          <%= f.input :is_teacher,
                      label: 'Sou professor',
                      as: :boolean %>
          <%= f.input :photo, label: 'Escolha uma foto', as: :file %>
          <%= f.input :password,
                      label: 'Escolha sua senha',
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      wrapper_html: { class: 'formtext' },
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: 'Confirme sua senha',
                      required: true,
                      wrapper_html: { class: 'formtext' },
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="form-actions btn btn-flat btn-block">
          <%= f.button :submit, "Cadastrar" %>
        </div>
        <% end %>
        <div class="d-flex justify-content-center my-3">
          <%= link_to "Entrar", new_session_path(resource_name) %>
        </div>
    </div>
  </div>
</div>
