<div  class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 whitebox">
      <h2 class="text-center mt-2 mb-5">Login</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: 'Seu e-mail',
                      required: false,
                      autofocus: true,
                      wrapper_html: { class: 'formtext' },
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: 'Senha',
                      required: false,
                      wrapper_html: { class: 'formtext' },
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me,
                      wrapper_html: { class: 'formtext' },
                      label: 'Lembrar de mim',
                      as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions btn btn-flat btn-block">
          <%= f.button :submit, "Entrar" %>
        </div>
      <% end %>
      <div class="d-flex justify-content-between mt-3 mb-3">
        <%= link_to "Cadastrar", new_registration_path(resource_name) %>
        <%= link_to "Esqueci minha senha", new_password_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
