<div  class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 whitebox">
    <h4 class="text-center mt-2 mb-2">Questões</h4>
    <% if @current_user_questions.empty? %>
      <p>Não existem questões.</p>
    <% else %>
      <% @current_user_questions.each do |question| %>
      <div class="overflow-auto" style="max-width: 280px; max-height: 400px;">
        <ul><%= "Aula #{question.lesson}: #{question.content}" %>
        <%= link_to "Enviar", send_question_path(question), method: :patch , class: "btn btn-link"  %></ul>
      </div>
    <% end %>
    <% end %>
    </div>
  </div>
</div>

